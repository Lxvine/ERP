<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical"
    tools:context=".client.UpdateClientActivity">

    <TextView
        android:id="@+id/editTV"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:autoSizeTextType="none"
        android:background="@drawable/yellowborder"
        android:ellipsize="marquee"
        android:text="MODIFY CLIENT"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        tools:ignore="HardcodedText,TextSizeCheck,UnusedAttribute" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="534dp"
        android:background="@drawable/yellowborder"
        android:scaleType="fitXY"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:backgroundTint="#FFC107"
        android:text="Update"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.465"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/backButtonUpdate"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:backgroundTint="#FFC107"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.468"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:backgroundTint="#FFC107"
        android:text="Delete"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backButtonUpdate"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/updateButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/idEdtClientName"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:background="@drawable/blueborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewClientName"
        app:layout_constraintVertical_bias="0.025"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textViewClientName"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:autoSizeTextType="none"
        android:background="@drawable/blueborder"
        android:ellipsize="marquee"
        android:text="Edit Name:"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="HardcodedText,TextSizeCheck,UnusedAttribute" />

    <EditText
        android:id="@+id/idEdtClientAddress"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/blueborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewClientAddress"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textViewClientAddress"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:autoSizeTextType="none"
        android:background="@drawable/blueborder"
        android:ellipsize="marquee"
        android:text="Edit Address:"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/idEdtClientName"
        app:layout_constraintVertical_bias="0.066"
        tools:ignore="HardcodedText,TextSizeCheck,UnusedAttribute" />

    <EditText
        android:id="@+id/idEdtClientEmail"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/blueborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewClientEmail"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/idEdtClientSector"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/blueborder"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewClientSector"
        app:layout_constraintVertical_bias="0.049"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textViewClientEmail"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:autoSizeTextType="none"
        android:background="@drawable/blueborder"
        android:ellipsize="marquee"
        android:text="Edit Email:"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/idEdtClientAddress"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="HardcodedText,TextSizeCheck,UnusedAttribute" />

    <TextView
        android:id="@+id/textViewClientSector"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="none"

        android:background="@drawable/blueborder"
        android:ellipsize="marquee"
        android:text="Edit Sector:"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/idEdtClientEmail"
        app:layout_constraintVertical_bias="0.172"
        tools:ignore="HardcodedText,TextSizeCheck,UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>