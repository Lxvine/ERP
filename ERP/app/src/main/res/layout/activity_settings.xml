<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity"
    android:background="#3F51B5">


    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="349dp"
        android:layout_height="645dp"
        android:background="@drawable/yellowborder"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337"
        app:srcCompat="@drawable/yellow"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewSend"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toTopOf="@+id/imageViewBack"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/ajustes"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/darkModeButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="darkmode settings"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSend"
        app:layout_constraintStart_toStartOf="@+id/imageViewSend"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend"
        app:layout_constraintVertical_bias="0.014"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/imageViewReceived"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toBottomOf="@+id/darkModeButton"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/ajustes"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <Button
        android:id="@+id/sizeButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="size settings"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewReceived"
        app:layout_constraintStart_toStartOf="@+id/imageViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/imageViewReceived"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageVieworg"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend"
        app:layout_constraintVertical_bias="0.465"
        app:srcCompat="@drawable/ajustes"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/lowSpecsButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Low specs settings"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewReceived"
        app:layout_constraintStart_toStartOf="@+id/imageViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/imageVieworg"
        app:layout_constraintVertical_bias="0.045"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/imageViewz"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend"
        app:layout_constraintVertical_bias="0.791"
        app:srcCompat="@drawable/ajustes"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/colorblindButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Colorblind settings"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewReceived"
        app:layout_constraintStart_toStartOf="@+id/imageViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/imageViewz"
        app:layout_constraintVertical_bias="0.132"
        tools:ignore="HardcodedText,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>