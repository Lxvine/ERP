<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hr.HRActivity"
    android:background="#3F51B5">


    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="341dp"
        android:layout_height="533dp"
        android:background="@drawable/yellowborder"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56"
        app:srcCompat="@drawable/yellow"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewSend"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toTopOf="@+id/imageViewBack"
        app:layout_constraintVertical_bias="0.062"
        app:srcCompat="@drawable/recruiting"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/recruitmentButton"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Recruitment"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSend"
        app:layout_constraintStart_toStartOf="@+id/imageViewSend"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:id="@+id/imageViewReceived"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toBottomOf="@+id/recruitmentButton"
        app:layout_constraintVertical_bias="0.106"
        app:srcCompat="@drawable/training"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <Button
        android:id="@+id/trainingButton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="TRAINING"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewReceived"
        app:layout_constraintStart_toStartOf="@+id/imageViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/imageViewReceived"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageVieworg"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:background="@drawable/blueborder"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBack"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewBack"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSend"
        app:layout_constraintVertical_bias="0.714"
        app:srcCompat="@drawable/ajustes"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/orgButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Organization chart"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewReceived"
        app:layout_constraintStart_toStartOf="@+id/imageViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/imageVieworg"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="HardcodedText,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>